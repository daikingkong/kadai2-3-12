<h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><span><%= book.title %></span></td>
      <td ><span><%= book.body %></span></td>
      <!--さらに、show,edit,destroy-->
      <td><%= link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy", book_path(book.id) %></td>
    </tr>
  <% end %>
</table>
<!--ここから下に新規投稿フォーム作成-->
<%= form_with model:@book do |f| %>
  <h2>New book</h2>
  <p>Title</p>
  <%= f.text_field :title %>
  <P>Body</P>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
<!--後でわかりやすく名付けしたりしてcss適用させる-->